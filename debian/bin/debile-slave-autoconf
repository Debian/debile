set -e

AUTOCONF_SCRIPT_ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DEBILE_UNPRIV="Debian-debile-unpriv"

function debile-run {
    su -s /bin/sh \
       -c $@ \
       ${DEBILE_UNPRIV}
}

debile-run "${AUTOCONF_SCRIPT_ROOT}/debile-slave-autoconf-openpgp"
# ${AUTOCONF_SCRIPT_ROOT}/debile-slave-autoconf-yaml
